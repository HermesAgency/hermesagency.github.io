---
import { GoogleFontsOptimizer } from 'astro-google-fonts-optimizer'
interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <GoogleFontsOptimizer
            url="https://fonts.googleapis.com/css2?family=Oxygen:wght@400;700&display=swap"
        />
    </head>
    <body class="h-full min-h-screen overflow-hidden bg-neutral">
        <div class="drawer drawer-end overflow-hidden">
            <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content flex flex-col">
                <!-- Navbar -->
                <div class="navbar w-full">
                    <!-- Navbar Icon -->
                    <div
                        class="z-20 mx-2 h-full flex-1 px-2 mix-blend-difference"
                    >
                        <img
                            src="src/assets/Hermes_Logo_2024.svg"
                            alt="Logo"
                            class="aspect-video h-12"
                        />
                    </div>
                    <div class="flex items-center gap-1 lg:hidden">
                        menu
                        <label
                            for="my-drawer-3"
                            aria-label="open sidebar"
                            class="btn btn-square btn-ghost z-20 mix-blend-difference"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                class="inline-block h-6 w-6 stroke-white"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </label>
                    </div>
                    <div class="hidden flex-none lg:block">
                        <ul class="menu menu-horizontal mix-blend-difference">
                            <!-- Navbar menu content here -->
                            <li>
                                <a class="text-neutral-content">Navbar Item 1</a
                                >
                            </li>
                            <li>
                                <a class="text-neutral-content">Navbar Item 2</a
                                >
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- content -->
                <slot />
            </div>
            <div class="drawer-side overflow-hidden">
                <label
                    for="my-drawer-3"
                    aria-label="close sidebar"
                    class="drawer-overlay"></label>
                <ul class="menu min-h-full w-80 bg-neutral-content px-4 py-16">
                    <!-- Sidebar content here -->
                    <li><a class="text-neutral">Sidebar Item 1</a></li>
                    <li><a class="text-neutral">Sidebar Item 2</a></li>
                </ul>
            </div>
        </div>
        <style>
            body h1 {
                @apply text-[64px] md:text-[86px] xl:text-8xl;
            }
            body h2 {
                @apply text-[54px] md:text-[64px];
            }

            body h3 {
                @apply text-[45px] md:text-5xl;
            }
            html {
                font-size: 18px;
            }
        </style>
    </body>
</html>
